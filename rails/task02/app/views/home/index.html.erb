

	<!-- Slide1 -->
	<section class="slide1">
		<div class="wrap-slick1">
			<div class="slick1">
                <% @sliders.each do |slider| %>
				<div class="item-slick1" style="background-image: url(<%= slider.banner %>);">
					<div class="wrap-content-slide1 sizefull flex-col-c-m p-l-15 p-r-15 p-t-150 p-b-170">
						<span class="caption1-slide1 m-text1 t-center animated visible-false m-b-15" data-appear="fadeInDown">
							<%= slider.catption %>
						</span>

						<h2 class="caption2-slide1 xl-text1 t-center animated visible-false m-b-37" data-appear="fadeInUp">
							<%= slider.title %>
						</h2>

						<div class="wrap-btn-slide1 w-size1 animated visible-false" data-appear="zoomIn">
							<!-- Button -->
							<a href="<%= slider.button_url %>" class="flex-c-m size2 bo-rad-23 s-text2 bgwhite hov1 trans-0-4">
								<%= slider.button_text %>
							</a>
						</div>
					</div>
				</div>
                <% end %>
			</div>
		</div>
	</section>

	<!-- New Product -->
	<section class="newproduct bgwhite p-t-45 p-b-105">
		<div class="container">
			<div class="sec-title p-b-60">
				<h3 class="m-text5 t-center">
					Featured Products
				</h3>
			</div>


			<!-- Slide2 -->
			<div class="wrap-slick2">
				<div class="slick2">
                <% @featured_products.each do |featured_product| %>
					<div class="item-slick2 p-l-15 p-r-15">
						<!-- Block2 -->
						<div class="block2">
							<div class="block2-img wrap-pic-w of-hidden pos-relative">
								<img src="<%= featured_product.image %>" alt="IMG-PRODUCT">
							</div>

							<div class="block2-txt p-t-20">
								<a href="product-detail.html" class="block2-name dis-block s-text3 p-b-5">
									<%= featured_product.title %>
								</a>

								<span class="block2-price m-text6 p-r-5">
									<%= number_to_currency(featured_product.price) %>
								</span>
							</div>
						</div>
					</div>
                <% end %>

					
				</div>
			</div>

		</div>
	</section>
